@model IEnumerable<CadastroTarefa.Models.Tarefa>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
   @Html.ActionLink("Novo", "Criar")
</p>

@using (Html.BeginForm("Index", "Tarefas", FormMethod.Get))
{
    @Html.AntiForgeryToken()
   <p>
      Pesquisar por título ou descrição: @Html.TextBox("PesquisarString", ViewBag.CurrentFilter as string)
      <input type="submit" value="Pesquisar" />
   </p>
}

<table class="table">
   <tr>
      <th>
         @Html.DisplayNameFor(model => model.Titulo)
      </th>
      <th>
         @Html.DisplayNameFor(model => model.Descricao)
      </th>
      <th>
         @Html.DisplayNameFor(model => model.DataExecucao)
      </th>
      <th></th>
   </tr>

   @foreach (var item in Model)
   {
      <tr>
         <td>
            @Html.DisplayFor(modelItem => item.Titulo)
         </td>
         <td>
            @Html.DisplayFor(modelItem => item.Descricao)
         </td>
         <td>
            @Html.DisplayFor(modelItem => item.DataExecucao)
         </td>
         <td>
            @Html.ActionLink("Editar", "Editar", new { id = item.Id }) |
            @Html.ActionLink("Detalhes", "Detalhes", new { id = item.Id }) |
            @Html.ActionLink("Excluir", "Excluir", new { id = item.Id })
         </td>
      </tr>
   }

</table>